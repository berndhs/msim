OBJ_DIR = obj
SRC_DIR = src
BIN_DIR = bin

PROJECT_NAME=msim
MAKEFILE = Makefile
TOP_MAKEFILE = Makefile
TARGET = $(BIN_DIR)/lib${PROJECT_NAME}.so

include make.inc

include files.inc

CXX = g++
CXX_CFLAGS = -O2 -Wall -g -fpic
CXX_LDFLAGS = -shared

LIBS =
INCLUDE = -I$(SRC_DIR)/ -I/usr/local/include

# Makes a list of the object files that will have to be created.
OBJ = $(addprefix $(OBJ_DIR)/, $(notdir $(SRC:.cpp=.o)))


all: $(TARGET)
	ls -ltr $(BIN_DIR)/*

clean: FORCE
	rm $(OBJ) $(TARGET)

distclean:
	$(MAKE) --always-make clean
	rm $(MAKEFILE)

$(TARGET): $(BIN_DIR) $(OBJ_DIR) $(OBJ) 
	$(CXX) $(CXX_CFLAGS) $(CXX_LDFLAGS) $(OBJ) -o $(TARGET) 

install: all FORCE
	install -d $(DESTDIR)/$(LIBDIR)
	install -m 0755 -p $(TARGET) $(DESTDIR)/$(LIBDIR)

$(OBJ_DIR):
	mkdir $(OBJ_DIR)

$(BIN_DIR):
	mkdir $(BIN_DIR)

include make.dep

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.cpp
	$(CXX) $(CXX_CFLAGS) $(INCLUDE) -c $< -o  $@
	
FORCE:


make.dep: $(SRC) $(HDR)
	echo "sources " $(SRC)
	$(CXX) -MM $(SRC) | sed 's+[^\.]*\.o:+$(OBJ_DIR)/&+' > make.dep


