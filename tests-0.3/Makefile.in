OBJ_DIR = obj
SRC_DIR = src
BIN_DIR = bin

PROJECT_NAME=testmsim
MAKEFILE = Makefile
TOP_MAKEFILE = Makefile
TARGET = $(BIN_DIR)/${PROJECT_NAME}
DESKTOP_FILE = ${PROJECT_NAME}.desktop
DESKTOP_DIR = /usr/share/applications
ICON_FILE = ${PROJECT_NAME}.png
ICON_DIR = /usr/share/pixmaps

include make.inc

include files.inc

CXX = g++
CXX_CFLAGS = -O2 -Wall -g
CXX_LDFLAGS = -lminiscsim
EXTRA_INC= -I../msim-0.3/src
EXTRA_LIB= -L../msim-0.3/bin
LIBS =
INCLUDE = -I$(SRC_DIR)/ -I/usr/local/include $(EXTRA_INC)

# Makes a list of the object files that will have to be created.
OBJ = $(addprefix $(OBJ_DIR)/, $(notdir $(SRC:.cpp=.o)))


all: $(TARGET)
	ls -ltr $(BIN_DIR)/${PROJECT_NAME}*

clean: FORCE
	rm $(OBJ) $(TARGET)

distclean:
	make clean
	rm $(MAKEFILE)

$(TARGET): $(BIN_DIR) $(OBJ_DIR) $(OBJ) 
	$(CXX) $(CXX_CFLAGS) $(CXX_LDFLAGS) $(OBJ) -o $(TARGET) $(EXTRA_LIB)

install: all FORCE
	install -d $(DESTDIR)
	install -m 0755 -p $(TARGET) $(DESTDIR)

desktop: install
	install -d $(DESKTOP_DIR)
	install -m 0644 -p $(DESKTOP_FILE) $(DESKTOP_DIR)
	install -d $(ICON_DIR)
	install -m 0644 -p $(ICON_FILE) $(ICON_DIR)

$(OBJ_DIR):
	mkdir $(OBJ_DIR)

$(BIN_DIR):
	mkdir $(BIN_DIR)

include make.dep

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.cpp
	$(CXX) $(CXX_CFLAGS) $(INCLUDE) -c $< -o  $@
	
FORCE:


make.dep: $(SRC) $(HDR)
	$(CXX) -MM $(SRC) > make.dep.tmp
	awk '{print "$(OBJ_DIR)/"$$0; }' make.dep.tmp > make.dep


